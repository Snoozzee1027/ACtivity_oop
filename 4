vï»¿using System;

class Program
{
    static void Main()
    {
        // Array to store 7 daily stock prices
        decimal[] prices = new decimal[7];

        // Input: Get prices for 7 days
        for (int i = 0; i < 7; i++)
        {
            Console.Write($"Enter stock price for Day {i + 1}: ");
            prices[i] = decimal.Parse(Console.ReadLine());
        }

        decimal maxGain = 0; // Maximum price increase
        int gainDay = 0;     // Index of day with highest gain

        Console.WriteLine("\nDaily Percentage Gains:");
        for (int i = 1; i < 7; i++)
        {
            // Calculate gain and percentage increase
            decimal gain = prices[i] - prices[i - 1];
            decimal percent = (gain / prices[i - 1]) * 100;

            Console.WriteLine($"Day {i + 1}: {percent:F2}%");

            // Track the highest gain
            if (gain > maxGain)
            {
                maxGain = gain;
                gainDay = i;
            }
        }

        // Output day with highest gain
        Console.WriteLine($"\nHighest gain was on Day {gainDay + 1}.");
    }
}
